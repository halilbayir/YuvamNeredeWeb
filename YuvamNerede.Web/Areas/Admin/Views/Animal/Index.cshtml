
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}
<link href="~/Areas/Admin/Content/css/dataTables.bootstrap.css" rel="stylesheet" />
<script src="~/Scripts/jquery.dataTables.min.js"></script>
<script src="~/Scripts/dataTables.bootstrap.min.js"></script>
<script src="~/Scripts/custom/deleteRecordTable.js"></script>
<!-- Content Header (Page header) -->
@model List<YuvamNerede.Model.Models.ViewModels.AnimalVM>

<section class="content-header">
    <h1>
        Kategori Listesi
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Tables</a></li>
        <li class="active">Data tables</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Data Table With Full Features</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Adı</th>
                                <th>Yaşı</th>
                                <th>Açıklaması</th>
                                <th>Yer</th>
                                <th>Cins</th>
                                <th>İşlem</th>
                                <th>İşlem</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="a_@item.ID">

                                    <td>@item.Name</td>
                                    <td>@item.Age</td>
                                    <td>@item.Description</td>
                                    <td>@item.Location</td>
                                    <td>@item.GenusName</td>
                                    <td><a href="/Admin/Animal/UpdateAnimal/@item.ID">Güncelle</a></td>
                                    <td><img src="~/Areas/Admin/Content/img/delete-icon.png" width="30" height="30" style="cursor:pointer" onclick="Delete(@item.ID)" /></td>
                                </tr>
                            }

                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Adı</th>
                                <th>Yaşı</th>
                                <th>Açıklaması</th>
                                <th>Yer</th>
                                <th>Cins</th>
                                <th>İşlem</th>
                                <th>İşlem</th>
                            </tr>
                        </tfoot>
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div><!-- /.col -->
    </div><!-- /.row -->
</section><!-- /.content -->

<script>
    function Delete(id) {
        $.ajax({
            url: "/Admin/Animal/DeleteAnimal/" + id,
            type: "POST",
            success: function (result) {
                $("a_" + id).fadeOut();
            }
        })
    }
</script>
<script>
      $(function () {
        $("#example1").DataTable();
        $('#example2').DataTable({
          "paging": true,
          "lengthChange": false,
          "searching": false,
          "ordering": true,
          "info": true,
          "autoWidth": false
        });
      });
</script>



